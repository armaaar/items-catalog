<!DOCTYPE html>
<html lang="ar" dir="ltr">
	<head>
		<title>
			{% if universal.variables.site_title == meta.title %}
				{{ meta.title }}
			{% else %}
				{{ meta.title }} - {{ universal.variables.site_title }}
			{% endif %}
		</title>

		<base href="{{ universal.variables.domain }}">
		<link rel="shortcut icon" type="imagex-icon" href="{{ url_for("static", filename="favicon.ico") }}" />

		{% include "./head/seo.jinja" %}
		<!-- Latest compiled and minified Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
			integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" href="{{ url_for("css", filename="global.min.css") }}" />

		<script>
            // Picture element HTML5 shiv
            document.createElement( "picture" );
        </script>
		<script src="https://cdn.ckeditor.com/4.6.2/basic/ckeditor.js"></script>
		<script type="text/javascript" src="{{ url_for("js", filename="global.min.js") }}"></script>
	</head>
	<body class="{{ meta.body_class }}" >
		{% include "./head/menu.jinja" %}

		{% if universal.variables.site_title != meta.title %}
			<div class="container">
				<div class="col-xs-12">
					<h1 class="page-title">{{ meta.title }}</h1>
				</div>
			</div>
		{% endif %}

		{% with messages = get_flashed_messages() %}
		   {% if messages %}
		   <div class="container">
			   <div class="col-xs-12">
				   <ul>
				      {% for message in messages %}
				         <li>{{ message }}</li>
				      {% endfor %}
				  </ul>
			  </div>
		  </div>
		   {% endif %}
		{% endwith %}

		{% block content %}
        {% endblock content %}
	</body>
</html>
